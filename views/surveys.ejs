<body>
  <div class="pageContainer">
    <div class="titleContainer">
      <h1>Data Challenge 2022: Science Speech</h1>
      <h3>Organized by NGIST in collaboration with the Data Science Program at Indiana University Bloomington</h3>
      <p>For registration, please fill in the following information, where the fields with<span
          class="required">*</span>are required.</p>
    </div>

    <hr>

    <div class="container">
      <form action="/" method="post" id="info">

        <div class="teamInfo">
          <h2 class="">Team Information</h2>

          <div class="">
            <div class="row">
              <label for="teamName" class="col-md-4">Team Name<span class="required">*</span></label>
              <input type="text" name="teamName" class="col-md-7" id="teamName" required autofocus>
            </div>

            <div class="row">
              <label for="teamContactEmail" class="col-md-4">Contact Email<span class="required">*</span></label>
              <input type="email" name="teamContactEmail" class="col-md-7" id="teamContactEmail" required>
            </div>

            <div class="row">
              <label for="phoneNumber" class="col-md-4">Phone<span class="required">*</span></label>
              <input type="tel" name="phoneNumber" class="col-md-7" id="phoneNumber" required>
            </div>
          </div>
        </div>

        <div>
          <p class="descriptionOfNumber">Number of members in the team (Up to five members per team)</p>

          <div class="numOfMembers row">

            <% for(var i=1; i <=5; i++) { %>
              <div class="col">
                <input type="radio" id="<%= i %>Members" name="numOfMembers" value="<%= i %>">
                <label for="<%= i %>Members">
                  <%= i %>
                </label>
              </div>
              <% } %>

          </div>

          <button type="button" class="reset btn btn-link">reset</button>
        </div>

        <div class="infoOfMembers">

          <% for(var i=1; i <=5; i++) { %>
            <div id="member_box<%= i %>" class="member<%= i %>">
              <h2>Team Member <%= i %> Contact Information</h2>

              <div class="">
                <div class="row">
                  <label for="member<%= i %>FirstName" class="col-md-4">First Name<span
                      class="required">*</span></label>
                  <input type="text" name="member<%= i %>FirstName" class="col-md-7" id="member<%= i %>FirstName"
                    autocomplete="given-name" required>
                </div>

                <div class="row">
                  <label for="member<%= i %>LastName" class="col-md-4">Last Name<span class="required">*</span></label>
                  <input type="text" name="member<%= i %>LastName" class="col-md-7" id="member<%= i %>LastName"
                    autocomplete="family-name" required>
                </div>

                <div class="row">
                  <label for="member<%= i %>Email" class="col-md-4">Email<span class="required">*</span></label>
                  <input type="email" name="member<%= i %>Email" class="col-md-7" id="member<%= i %>Email"
                    autocomplete="email" required>
                </div>

                <div class="row">
                  <label for="member<%= i %>University" class="col-md-4">School</label>
                  <input type="text" name="member<%= i %>University" class="col-md-7" id="member<%= i %>University">
                </div>

                <div class="row">
                  <label for="member<%= i %>Field" class="col-md-4">Grades</label>
                  <input type="text" name="member<%= i %>Field" class="col-md-7" id="member<%= i %>Field">
                </div>
              </div>
            </div>
            <% } %>

        </div>
    </div>

    <div class="submit">
      <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </div>

    </form>
  </div>

